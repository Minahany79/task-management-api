{
  "name": "task-management-application",
  "version": "1.0.0",
  "description": "Technical Task: Task Management API",
  "main": "app.js",
  "scripts": {
    "build": "npx tsc",
    "start": "nodemon --exec ts-node src/app.ts",
    "start:prod": "pm2 delete demo; pm2 start --name demo \"dist/src/app.js\"",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "pretty": "prettier -c .",
    "pretty:fix": "prettier . -w",
    "migration:generate": "cross-var npx typeorm-ts-node-commonjs migration:generate ./src/config/db/migrations/$npm_config_name -d ./src/config/db/index.ts",
    "migration:run": "npm run build && npx typeorm-ts-node-commonjs migration:run --dataSource ./src/config/db/index.ts",
    "migrate-and-start": "npm run build && npx typeorm-ts-node-commonjs migration:run --dataSource ./src/config/db/index.ts && npm run start:prod",
    "domain:generate": "bash domain.sh"
  },
  "author": "Mina Hany",
  "license": "ISC",
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "cross-var": "^1.1.0",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-handler": "^1.2.0",
    "express-validator": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.2",
    "nodemon": "^3.1.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.5.0",
    "typeorm": "^0.3.2",
    "winston": "^3.8.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.14",
    "@types/express-validator": "^3.0.0",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/morgan": "^1.9.9",
    "@types/node": "^18.7.18",
    "@types/swagger-ui-express": "^4.1.3",
    "@typescript-eslint/eslint-plugin": "^5.15.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.11.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.2.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.3"
  }
}
